<?xml version="1.0" encoding="utf-8"?>

<ScrollView
android:id="@+id/scrollview1"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="320dip" android:id="@+id/widget28"
	android:orientation="vertical" android:layout_height="480dip"
	android:background="@drawable/background">
	<LinearLayout android:id="@+id/widget29"
		android:layout_below="@+id/widget28" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="55dip">
		<CheckBox android:id="@+id/chbRdsmode" android:text="@string/rdsmode"
			android:textStyle="bold" android:layout_marginLeft="15dip"
			android:layout_height="50dip" android:layout_width="150dip"
			android:textSize="22sp">
		</CheckBox>
		<CheckBox android:id="@+id/chbSetRdsAf" android:text="@string/rdsaf"
			android:textStyle="bold" android:layout_marginLeft="10dip"
			android:layout_height="50dip" android:layout_width="130dip"
			android:textSize="22sp">
		</CheckBox>
	</LinearLayout>

	<LinearLayout android:id="@+id/widget171"
		android:layout_below="@+id/widget29" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="55dip">
		<TextView android:id="@+id/txtRdsSystem" android:text="@string/rdssystem"
			android:textSize="24sp" android:textStyle="bold" android:gravity="left|center"
			android:layout_height="50dip" android:layout_marginLeft="15dip"
			android:layout_width="150dip">
		</TextView>
		<Spinner android:id="@+id/spnRdsSystem" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="140dip">
		</Spinner>

	</LinearLayout>


	<LinearLayout android:id="@+id/widget170"
		android:layout_below="@+id/widget171" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="55dip">
		<TextView android:id="@+id/txtBand" android:text="@string/band"
			android:gravity="left|center" android:textStyle="bold"
			android:textSize="24sp" android:layout_width="150dip"
			android:layout_marginLeft="15dip" android:layout_height="50dip">
		</TextView>
		<Spinner android:id="@+id/spnBand" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="140dip">
		</Spinner>
	</LinearLayout>


	<LinearLayout android:id="@+id/widget174"
		android:layout_below="@+id/widget170" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="50dip">
		<TextView android:id="@+id/txtMode" android:text="@string/mode"
			android:gravity="left|center" android:textStyle="bold"
			android:textSize="24sp" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="150dip">
		</TextView>
		<Spinner android:id="@+id/spnMode" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="140dip">
		</Spinner>
	</LinearLayout>
	<LinearLayout android:id="@+id/widget172"
		android:layout_below="@+id/widget170" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="50dip">
		<TextView android:id="@+id/txtEmp" android:text="@string/deemphasis"
			android:layout_gravity="left" android:gravity="left|center"
			android:textSize="24sp" android:textStyle="bold"
			android:layout_marginLeft="15dip" android:layout_width="150dip"
			android:layout_height="50dip">
		</TextView>
		<Spinner android:id="@+id/spnEmp" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="140dip">
		</Spinner>
	</LinearLayout>

	<LinearLayout android:id="@+id/widget173"
		android:layout_below="@+id/widget172" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="50dip">
		<TextView android:id="@+id/txtChannelSpacing" android:text="@string/channelSpace"
			android:layout_gravity="left" android:gravity="left|center"
			android:textSize="24sp" android:textStyle="bold"
			android:layout_marginLeft="15dip" android:layout_height="50dip"
			android:layout_width="150dip">
		</TextView>
		<Spinner android:id="@+id/spnChannelSpace"
			android:layout_height="50dip" android:layout_marginLeft="15dip"
			android:layout_width="140dip">
		</Spinner>
	</LinearLayout>



	<LinearLayout android:id="@+id/widget207"
		android:layout_below="@+id/widget173" android:layout_width="fill_parent"
		android:paddingRight="10dip" android:layout_alignParentLeft="true"
		android:layout_height="50dip">
		<TextView android:id="@+id/txtRssi" android:text="@string/rssi"
			android:gravity="left|center" android:textSize="24sp"
			android:textStyle="bold" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="150dip">
		</TextView>
		<EditText android:id="@+id/Rssi" android:text="@string/empty"
			android:textSize="28sp" android:layout_height="50dip"
			android:layout_marginLeft="15dip" android:layout_width="130dip">
		</EditText>
	</LinearLayout>


	<RelativeLayout android:id="@+id/widget173"
		android:layout_below="@+id/widget171" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:paddingBottom="10dip"
		android:layout_gravity="bottom" android:layout_height="90dip">
		<Button android:id="@+id/btnOk" android:layout_height="60dip"
			android:text="@string/btnOk" android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true" android:layout_width="150dip">
		</Button>
		<Button android:id="@+id/btnCancel" android:layout_height="60dip"
			android:text="@string/btnCancel" android:layout_alignTop="@+id/ok_button"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true" android:layout_width="150dip">
		</Button>
	</RelativeLayout>
</LinearLayout>
</ScrollView>

