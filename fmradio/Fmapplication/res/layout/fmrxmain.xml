<?xml version="1.0" encoding="utf-8"?>
<ScrollView
android:id="@+id/scrollview1"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content">
<LinearLayout android:id="@+id/widget28"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="320dip" android:orientation="vertical"
	android:layout_height="480dip" android:background="@drawable/background">
	<LinearLayout android:id="@+id/widget30"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_height="80dip">

		<ImageView android:id="@+id/imgAudiopath"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="center" android:src="@drawable/headset"
			android:layout_marginLeft="20dip">
		</ImageView>

		<ImageView android:id="@+id/imgMute" android:src="@drawable/fm_volume"
			android:layout_gravity="left" android:layout_height="48dip"
			android:layout_width="48dip" android:layout_marginLeft="20dip">
		</ImageView>
		<ImageView android:id="@+id/imgMode" android:layout_height="wrap_content"
			android:src="@drawable/fm_stereo" android:layout_width="wrap_content"
			android:layout_gravity="center" android:layout_marginLeft="20dip">
		</ImageView>
		<ImageView android:id="@+id/imgPower" android:layout_height="wrap_content"
			android:layout_width="wrap_content" android:layout_gravity="center"
			android:adjustViewBounds="true" android:baselineAlignBottom="true"
			android:cropToPadding="true" android:drawingCacheQuality="auto"
			android:src="@drawable/poweron" android:layout_marginLeft="20dip">
		</ImageView>
	</LinearLayout>
	<LinearLayout android:id="@+id/widget35"
		android:layout_below="@+id/widget30" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:layout_height="70dip">
		<TextView android:id="@+id/txtRadioText"
			android:scrollHorizontally="false" android:lines="1" android:text="@string/radioTxt"
			android:textStyle="bold" android:textSize="20sp"
			android:layout_width="fill_parent" android:layout_gravity="center"
			android:paddingLeft="50dip" android:layout_height="30dip">
		</TextView>
		<TextView android:id="@+id/txtPsText"
			android:scrollHorizontally="false" android:lines="1" android:text="@string/pstxt"
			android:layout_gravity="right|center" android:textStyle="bold"
			android:textSize="20sp" android:layout_width="fill_parent"
			android:paddingLeft="50dip" android:layout_height="30dip">
		</TextView>

	</LinearLayout>

	<LinearLayout android:id="@+id/widget36"
		android:layout_below="@+id/widget35" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:layout_centerInParent="true"
		android:layout_height="30dip">
		<TextView android:id="@+id/txtStatusMsg"
			android:layout_width="fill_parent" android:scrollHorizontally="false"
			android:lines="1" android:text="@string/statusMsg"
			android:paddingLeft="120dip" android:textSize="20sp"
			android:layout_height="30dip">
		</TextView>
	</LinearLayout>

	<LinearLayout android:id="@+id/widget67"
		android:layout_below="@+id/widget46" android:layout_width="fill_parent"
		android:layout_height="80dip">
		<ImageButton android:id="@+id/imgseekdown"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_gravity="center" android:background="@drawable/seek_down_bgd"
			android:layout_marginLeft="15dip">
		</ImageButton>
		<LinearLayout android:id="@+id/widget38"
			android:orientation="vertical" android:layout_width="144dip"
			android:layout_height="75dip">
			<TextView android:id="@+id/txtStationName"
				android:layout_width="fill_parent" android:text="@string/name"
				android:visibility="visible" android:paddingLeft="15dip"
				android:layout_gravity="center" android:textSize="22dip"
				android:layout_height="35dip">
			</TextView>
			<LinearLayout android:id="@+id/widget39"
				android:layout_width="144dip" android:orientation="horizontal"
				android:layout_height="40dip">
				<TextView android:id="@+id/txtRxFreq" android:layout_width="90dip"
					android:text="@string/rx_freq_val" android:textStyle="bold"
					android:visibility="visible" android:paddingLeft="7dip"
					android:layout_gravity="center" android:textSize="28dip"
					android:layout_height="wrap_content">
				</TextView>
				<TextView android:id="@+id/txtLabel" android:layout_width="50dip"
					android:layout_height="wrap_content" android:text="@string/labelhz"
					android:layout_gravity="center" android:layout_marginLeft="4dip"
					android:textSize="24dip">
				</TextView>
			</LinearLayout>
		</LinearLayout>
		<ImageButton android:id="@+id/imgseekup"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_marginLeft="10dip" android:layout_gravity="center"
			android:background="@drawable/seek_up_bgd">
		</ImageButton>
	</LinearLayout>

	<LinearLayout android:id="@+id/widget95"
		android:layout_below="@+id/widget72" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:paddingTop="40dip"
		android:layout_height="90dip">
		<Button android:id="@+id/station1" android:layout_height="40dip"
			android:text="@string/station1" android:textSize="20sp"
			android:layout_width="80dip" android:layout_marginLeft="20dip"
			android:background="@drawable/btn_bgd" android:clickable="true">
		</Button>
		<Button android:id="@+id/station2" android:layout_marginLeft="20dip"
			android:layout_height="40dip" android:text="@string/station2"
			android:textSize="20sp" android:layout_width="80dip"
			android:background="@drawable/btn_bgd" android:clickable="true">
		</Button>
		<Button android:id="@+id/station3" android:layout_marginLeft="20dip"
			android:layout_height="40dip" android:text="@string/station3"
			android:editable="true" android:textSize="20sp" android:layout_width="80dip"
			android:background="@drawable/btn_bgd" android:clickable="true">
		</Button>
	</LinearLayout>
	<LinearLayout android:id="@+id/widget99"
		android:layout_below="@+id/widget95" android:layout_alignParentLeft="true"
		android:layout_width="fill_parent" android:paddingTop="20dip"
		android:layout_height="90dip">
		<Button android:id="@+id/station4" android:layout_height="40dip"
			android:text="@string/station4" android:textSize="20sp"
			android:layout_width="80dip" android:layout_marginLeft="20dip"
			android:layout_gravity="center" android:background="@drawable/btn_bgd"
			android:clickable="true">
		</Button>
		<Button android:id="@+id/station5" android:layout_height="40dip"
			android:layout_marginLeft="20dip" android:text="@string/station5"
			android:textSize="20sp" android:layout_width="80dip"
			android:layout_gravity="center" android:background="@drawable/btn_bgd"
			android:clickable="true">
		</Button>
		<Button android:id="@+id/station6" android:layout_height="40dip"
			android:layout_marginLeft="20dip" android:text="@string/station6"
			android:textSize="20sp" android:layout_width="80dip"
			android:layout_gravity="center" android:background="@drawable/btn_bgd"
			android:clickable="true">
		</Button>
	</LinearLayout>


</LinearLayout>
</ScrollView>


